<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- âœ… SECTION 1: Declare Implicit Intent Queries -->
    <queries>
        <!-- ðŸ“Œ Allow opening web pages (supports both HTTP & HTTPS) -->
        <intent>
            <action android:name="android.intent.action.VIEW"/>
            <data android:scheme="http"/>
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW"/>
            <data android:scheme="https"/>
        </intent>

        <!-- ðŸ“Œ Allow dialing a phone number -->
        <intent>
            <action android:name="android.intent.action.DIAL"/>
        </intent>

        <!-- ðŸ“Œ Allow capturing images using the camera -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE"/>
        </intent>
    </queries>

    <!-- âœ… SECTION 2: Declare Camera Permissions & Features -->
    <!-- ðŸ“Œ Ensure the device has a camera -->
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <!-- ðŸ“Œ Request camera permission -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IntentsLab03"
        tools:targetApi="35">

        <!-- âœ… SECTION 3: Declare SecondActivity with a Custom Intent Filter -->
        <activity
            android:name=".SecondActivity"
            android:exported="false">
            <intent-filter>
                <!-- ðŸ“Œ Custom action for launching this activity -->
                <action android:name="com.example.MY_CUSTOM_ACTION"/>
                <!-- ðŸ“Œ Default category (required for standard app behavior) -->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- âœ… SECTION 4: Declare MainActivity (App Entry Point) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <!-- ðŸ“Œ Defines the main activity of the application -->
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>

